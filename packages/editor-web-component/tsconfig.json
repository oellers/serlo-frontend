{
  "extends": "@serlo/typescript-config/base.json",
  "compilerOptions": {
    "rootDir": "../..",
    "paths": {
      "@/*": ["../../apps/web/src/*"],
      "@editor/*": ["../editor/src/*"]
    },
    "outDir": "dist",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "resolveJsonModule": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "../../apps/web/**/*ts",
    "../../apps/web/**/*tsx"
  ],
  "exclude": ["node_modules", "../../node_modules", "dist"]
}
